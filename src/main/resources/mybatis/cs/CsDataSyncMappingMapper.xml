<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinawiserv.dsp.dir.mapper.cs.CsDataSyncMappingMapper">
    <!-- CsDataSyncMapping的resultMap,column是给数据库列起的别名,它对应property类的属性-->
    <resultMap id="result_CsDataSyncMapping_Map" type="com.chinawiserv.dsp.dir.entity.po.cs.CsDataSyncMapping">
        <id column="id" property="id" />
        <result column="website_name" property="websiteName" />
        <result column="block_url" property="blockUrl" />
        <result column="block_name" property="blockName" />
    </resultMap>

    <!-- 数据库中表名为:cs_data_sync_mapping的列名,as前是数据库的列明,as后是列的别名用于映射成实体类中的属性,需要注意的是别名必须与resultMap中的column别名一致 -->
    <sql id="cs_data_sync_mapping_Column">
        cs_data_sync_mapping.id as id
        ,cs_data_sync_mapping.website_name as website_name
        ,cs_data_sync_mapping.block_url as block_url
        ,cs_data_sync_mapping.block_name as block_name
    </sql>

    <!-- 获得一个CsDataSyncMapping对象,以参数CsDataSyncMapping对象中不为空的属性作为条件进行查询-->
    <select id="selectCsDataSyncMappingByObj" parameterType="com.chinawiserv.dsp.dir.entity.po.cs.CsDataSyncMapping" resultMap="result_CsDataSyncMapping_Map">
        select 
            <include refid="cs_data_sync_mapping_Column" /> 
        from cs_data_sync_mapping
        <where>
            <if test="blockName != null "> and cs_data_sync_mapping.block_name = #{blockName}</if>
            <if test="blockUrl != null "> and cs_data_sync_mapping.block_url = #{blockUrl}</if>
            <if test="websiteName != null "> and cs_data_sync_mapping.website_name = #{websiteName}</if>
            <if test="id != null "> and cs_data_sync_mapping.id = #{id}</if>
        </where>
    </select> 

    <!-- 通过CsDataSyncMapping的id获得对应数据库中表的数据对象-->
    <select id="selectCsDataSyncMappingById" parameterType="java.lang.String" resultMap="result_CsDataSyncMapping_Map">
        select 
            <include refid="cs_data_sync_mapping_Column" /> 
        from cs_data_sync_mapping
        where cs_data_sync_mapping.id = #{id}
    </select> 

    <!-- 将CsDataSyncMapping插入到对应数据库的表中,包括属性值为null的数据-->

    <insert id="insertCsDataSyncMapping" parameterType="com.chinawiserv.dsp.dir.entity.po.cs.CsDataSyncMapping">
        insert into cs_data_sync_mapping(id,website_name,block_url,block_name) 
        values(#{id},#{websiteName},#{blockUrl},#{blockName})
    </insert>

    <!-- 将CsDataSyncMapping中属性值不为null的数据,插入到对应数据库的表中-->
    <insert id="insertNonEmptyCsDataSyncMapping" parameterType="com.chinawiserv.dsp.dir.entity.po.cs.CsDataSyncMapping">
        insert into cs_data_sync_mapping
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="websiteName != null">website_name,</if>
            <if test="blockUrl != null">block_url,</if>
            <if test="blockName != null">block_name,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null"> #{id},</if>
            <if test="websiteName != null"> #{websiteName},</if>
            <if test="blockUrl != null"> #{blockUrl},</if>
            <if test="blockName != null"> #{blockName},</if>
        </trim>
    </insert>

    <!-- 通过CsDataSyncMapping的id将CsDataSyncMapping的数据更新到数据库中对应的表,包括值null的数据-->
    <update id="updateCsDataSyncMappingById" parameterType="com.chinawiserv.dsp.dir.entity.po.cs.CsDataSyncMapping">
        update cs_data_sync_mapping set
            website_name=#{websiteName}
            ,block_url=#{blockUrl}
            ,block_name=#{blockName}
        where id=#{id}
    </update>

    <!-- 通过CsDataSyncMapping的id将CsDataSyncMapping中属性值不为null的数据更新到数据库对应的表中-->
    <update id="updateNonEmptyCsDataSyncMappingById" parameterType="com.chinawiserv.dsp.dir.entity.po.cs.CsDataSyncMapping">
        update cs_data_sync_mapping
        <set>
            <if test="websiteName != null">
                website_name=#{websiteName},
            </if>
            <if test="blockUrl != null">
                block_url=#{blockUrl},
            </if>
            <if test="blockName != null">
                block_name=#{blockName},
            </if>
        </set>
        where id=#{id}
    </update>

</mapper>