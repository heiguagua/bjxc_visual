<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinawiserv.dsp.base.mapper.system.SysRoleMenuMapper">

	<!-- 开启二级缓存 -->
	<!--<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>-->

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.chinawiserv.dsp.base.entity.po.system.SysRoleMenu">
		<id column="id" property="id" />
		<result column="role_id" property="roleId" />
		<result column="menu_id" property="menuId" />
	</resultMap>
	
	<select id="selectRoleMenuByUserId" parameterType="java.lang.String" resultType="com.chinawiserv.dsp.base.entity.po.system.SysRoleMenu">
		SELECT DISTINCT rm.* FROM `sys_user_role` ur
		INNER JOIN `sys_role` r ON r.`id` = ur.`role_id`
		INNER JOIN `sys_role_menu` rm ON rm.`role_id` = ur.`role_id`
		INNER JOIN `sys_menu` sm ON sm.id = rm.menu_id
		WHERE ur.`user_id` = #{uid}
		AND r.`delete_flag` = 0
		AND sm.`delete_flag` = 0
	</select>
	
</mapper>
