<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinawiserv.dsp.base.mapper.system.SysRoleMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.chinawiserv.dsp.base.entity.po.system.SysRole">
		<id column="id" property="id" />
		<result column="role_type" property="roleType" />
		<result column="role_name" property="roleName" />
		<result column="role_desc" property="roleDesc" />
		<result column="role_level" property="roleLevel" />
		<result column="status" property="status" />
		<result column="create_user_id" property="createUserId" />
		<result column="create_time" property="createTime" />
		<result column="update_user_id" property="updateUserId" />
		<result column="update_time" property="updateTime" />
		<result column="delete_flag" property="deleteFlag" />
	</resultMap>

	<resultMap id="SysRoleVoMap" extends="BaseResultMap" type="com.chinawiserv.dsp.base.entity.vo.system.SysRoleVo">

	</resultMap>

	<sql id="queryConditions" >
		<where>
			delete_flag = '0' AND t.role_level &gt; ${roleLevel}
			<if test="searchKey != null ">
				AND t.role_name LIKE concat(concat('%',#{searchKey}),'%')
			</if>
		</where>
	</sql>

	<select id="selectVoPage" parameterType="java.util.Map" resultMap="SysRoleVoMap">
		SELECT t.* from sys_role t <include refid="queryConditions"></include>
	</select>

	<select id="selectVoById" parameterType="java.lang.String" resultMap="SysRoleVoMap">
		SELECT t.* from sys_role t WHERE t.id = #{id}
	</select>

	<select id="selectVoCount" parameterType="java.util.Map" resultType="java.lang.Integer">
		SELECT count(1) from sys_role t <include refid="queryConditions"></include>
	</select>

	<select id="selectRolesByUserId" parameterType="java.lang.String" resultMap="BaseResultMap">
		SELECT t.* from sys_role t
		LEFT JOIN sys_user_role ur ON t.id = ur.role_id
		WHERE ur.user_id = #{userId}
	</select>

	<update id="deleteBatchRoleByIds" parameterType="java.util.List">
		UPDATE sys_role SET delete_flag = '1' WHERE id IN
		<foreach collection="list" item="item" index="index" open="(" separator="," close=")">
			#{item}
		</foreach>
	</update>
</mapper>
