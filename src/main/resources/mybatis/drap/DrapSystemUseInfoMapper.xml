    </resultMap>

    <!-- 通用查询过滤条件 -->
    <sql id="queryConditions">
        <where>
            <if test="id != null">
                t.id = #{id,jdbcType=VARCHAR}
            </if>
        </where>
    </sql>

    <select id="selectVoPage" parameterType="java.util.Map" resultMap="BaseResultVoMap">
        SELECT t.* FROM drap_system_use_info t
        <include refid="queryConditions"></include>
    </select>

    <select id="selectVoById" parameterType="java.lang.String" resultMap="BaseResultVoMap">
        SELECT t.* FROM drap_system_use_info t WHERE t.id = #{id}
    </select>

    <select id="selectVoCount" parameterType="java.util.Map" resultType="java.lang.Integer">
        SELECT count(1) FROM drap_system_use_info t
        <include refid="queryConditions"></include>
    </select>

    <insert id="baseInsert" parameterType="com.chinawiserv.dsp.dir.entity.po.drap.DrapSystemUseInfo">
        insert into
        drap_system_use_info(id,info_system_id,visit_url,username,password,belong_dept,start_use_date,use_frequence,key_business,code_index)
        values(
        #{id},#{infoSystemId},#{visitUrl},#{username},#{password},#{belongDept},#{startUseDate},#{useFrequence},#{keyBusiness},#{codeIndex}
        )
    </insert>

    <update id="baseUpdate" parameterType="com.chinawiserv.dsp.dir.entity.po.drap.DrapSystemUseInfo">
        update drap_system_use_info
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="infoSystemId != null">
                info_system_id = #{infoSystemId},
            </if>
            <if test="visitUrl != null">
                visit_url = #{visitUrl},
            </if>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="belongDept != null">
                belong_dept = #{belongDept},
            </if>
            <if test="startUseDate != null">
                start_use_date = #{startUseDate},
            </if>
            <if test="useFrequence != null">
                use_frequence = #{useFrequence},
            </if>
            <if test="keyBusiness != null">
                key_business = #{keyBusiness},
            </if>
            <if test="codeIndex != null">
                code_index = #{codeIndex},
            </if>
