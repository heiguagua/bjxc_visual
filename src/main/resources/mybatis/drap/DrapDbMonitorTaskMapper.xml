<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinawiserv.dsp.dir.mapper.drap.DrapDbMonitorTaskMapper">

    <!-- 开启二级缓存 -->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.chinawiserv.dsp.dir.entity.po.drap.DrapDbMonitorTask">
        <id column="id" property="id"/>
        <result column="db_id" property="dbId"/>
        <result column="monitor_period" property="monitorPeriod"/>
        <result column="monitor_period_unit" property="monitorPeriodUnit"/>
        <result column="monitor_start" property="monitorStart"/>
        <result column="monitor_end" property="monitorEnd"/>
        <result column="next_start_time" property="nextStartTime"/>
        <result column="auto_update_flag" property="autoUpdateFlag"/>
        <result column="cur_status" property="curStatus"/>
    </resultMap>

    <resultMap id="BaseResultVoMap" extends="BaseResultMap"
               type="com.chinawiserv.dsp.dir.entity.vo.drap.DrapDbMonitorTaskVo">

    </resultMap>

    <!-- 通用查询过滤条件 -->
    <sql id="queryConditions">
        <where>
            <if test="id != null">
                t.id = #{id,jdbcType=VARCHAR}
            </if>
        </where>
    </sql>

    <select id="selectVoPage" parameterType="java.util.Map" resultMap="BaseResultVoMap">
        SELECT t.* FROM drap_db_monitor_task t
        <include refid="queryConditions"></include>
    </select>

    <select id="selectVoById" parameterType="java.lang.String" resultMap="BaseResultVoMap">
        SELECT t.* FROM drap_db_monitor_task t WHERE t.id = #{id}
    </select>

    <select id="selectVoCount" parameterType="java.util.Map" resultType="java.lang.Integer">
        SELECT count(1) FROM drap_db_monitor_task t
        <include refid="queryConditions"></include>
    </select>

    <insert id="baseInsert" parameterType="com.chinawiserv.dsp.dir.entity.po.drap.DrapDbMonitorTask">
        insert into
        drap_db_monitor_task(id,db_id,monitor_period,monitor_period_unit,monitor_start,monitor_end,next_start_time,auto_update_flag,cur_status)
        values(
        #{id},#{dbId},#{monitorPeriod},#{monitorPeriodUnit},#{monitorStart},#{monitorEnd},#{nextStartTime},#{autoUpdateFlag},#{curStatus}
        )
    </insert>

    <update id="baseUpdate" parameterType="com.chinawiserv.dsp.dir.entity.po.drap.DrapDbMonitorTask">
        update drap_db_monitor_task
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="dbId != null">
                db_id = #{dbId},
            </if>
            <if test="monitorPeriod != null">
                monitor_period = #{monitorPeriod},
            </if>
            <if test="monitorPeriodUnit != null">
                monitor_period_unit = #{monitorPeriodUnit},
            </if>
            <if test="monitorStart != null">
                monitor_start = #{monitorStart},
            </if>
            <if test="monitorEnd != null">
                monitor_end = #{monitorEnd},
            </if>
            <if test="nextStartTime != null">
                next_start_time = #{nextStartTime},
            </if>
            <if test="autoUpdateFlag != null">
                auto_update_flag = #{autoUpdateFlag},
            </if>
            <if test="curStatus != null">
                cur_status = #{curStatus},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="baseDelete" parameterType="java.util.Map">
        delete from drap_db_monitor_task
        <include refid="deleteWhereCause"/>
    </delete>

    <sql id="deleteWhereCause">
        <where>
            <if test="id != null">
                id = #{id}
            </if>
        </where>
    </sql>


</mapper>
