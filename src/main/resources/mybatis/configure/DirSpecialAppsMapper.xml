<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinawiserv.dsp.dir.mapper.configure.DirSpecialAppsMapper">

	<!-- 开启二级缓存 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.chinawiserv.dsp.dir.entity.po.configure.DirSpecialApps">
                    <id column="id" property="id" />
                                                                                                                                                                                <result column="region_code" property="regionCode" />
                            <result column="app_category" property="appCategory" />
                            <result column="app_name" property="appName" />
                            <result column="app_url" property="appUrl" />
                            <result column="order_number" property="orderNumber" />
                            <result column="status" property="status" />
                            <result column="create_user_id" property="createUserId" />
                            <result column="create_time" property="createTime" />
                            <result column="update_user_id" property="updateUserId" />
                            <result column="update_time" property="updateTime" />
                            <result column="delete_flag" property="deleteFlag" />
            	</resultMap>

	<resultMap id="BaseResultVoMap" extends="BaseResultMap" type="com.chinawiserv.dsp.dir.entity.vo.configure.DirSpecialAppsVo">

    </resultMap>


	<update id="updateDeleteFlag" parameterType="string">
    	update dir_special_apps 
    	
    		set delete_flag = 1
     
     	where  id = #{id}                              
    </update>
    <!-- 通用查询过滤条件 -->
    <sql id="queryConditions">
        <where>
                                <if test="id != null">
                t.id = #{id,jdbcType=VARCHAR}
            </if>
                   <if test="deleteFlag != null">
                t.delete_flag = #{deleteFlag,jdbcType=INTEGER}
            </if>
            <if test="searchKey != null">
             t.app_name LIKE CONCAT('%',#{searchKey},'%')
        </if>                                                                                                                                                                                                                                </where>
    </sql>
    
    <select id="selectVoListForTreeData" parameterType="java.util.Map" resultMap="BaseResultVoMap">
        SELECT t.*,CASE WHEN b.dcode IS NULL THEN '0' ELSE '1' END AS has_leaf
        FROM dir_classify t
        LEFT JOIN (SELECT DISTINCT(fid) AS dcode FROM dir_classify) b ON t.id=b.dcode
        <include refid="queryConditions"></include>and t.delete_flag = 0 
        order by order_number
    </select>

    <select id="selectVoPage" parameterType="java.util.Map" resultMap="BaseResultVoMap">
    		SELECT t.* FROM dir_special_apps t 
    		
    		WHERE t.delete_flag = #{deleteFlag,jdbcType=INTEGER}             
        	
        	<if test="searchKey != null  and searchKey!='' ">
           		and t.app_name LIKE CONCAT('%',#{searchKey},'%')
        	</if>
    </select>

    <select id="selectVoById" parameterType="java.lang.String" resultMap="BaseResultVoMap">
    	SELECT t.* FROM dir_special_apps t WHERE t.id = #{id}
    </select>

    <select id="selectVoCount"  parameterType="java.util.Map" resultType="java.lang.Integer">
    	SELECT count(1) FROM dir_special_apps t 
    	WHERE t.delete_flag = #{deleteFlag,jdbcType=INTEGER}             
        	
        	<if test="searchKey != null  and searchKey!='' ">
           		and t.app_name LIKE CONCAT('%',#{searchKey},'%')
        	</if>
    </select>

    <insert id="baseInsert" parameterType="com.chinawiserv.dsp.dir.entity.po.configure.DirSpecialApps">
        insert into dir_special_apps(id,region_code,app_category,app_name,app_url,order_number,status,create_user_id,create_time,update_user_id,update_time,delete_flag) values(
            #{id},#{regionCode},#{appCategory},#{appName},#{appUrl},#{orderNumber},#{status},#{createUserId},#{createTime},#{updateUserId},#{updateTime},#{deleteFlag})
    </insert>

    <update id="baseUpdate" parameterType="com.chinawiserv.dsp.dir.entity.po.configure.DirSpecialApps">
        update dir_special_apps
        <set>
                    <if test="id != null">
                id = #{id},
            </if>
                    <if test="regionCode != null">
                region_code = #{regionCode},
            </if>
                    <if test="appCategory != null">
                app_category = #{appCategory},
            </if>
                    <if test="appName != null">
                app_name = #{appName},
            </if>
                    <if test="appUrl != null">
                app_url = #{appUrl},
            </if>
                    <if test="orderNumber != null">
                order_number = #{orderNumber},
            </if>
                    <if test="status != null">
                status = #{status},
            </if>
                    <if test="createUserId != null">
                create_user_id = #{createUserId},
            </if>
                    <if test="createTime != null">
                create_time = #{createTime},
            </if>
                    <if test="updateUserId != null">
                update_user_id = #{updateUserId},
            </if>
                    <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
                    <if test="deleteFlag != null">
                delete_flag = #{deleteFlag}
            </if>
                </set>
        where  id = #{id}                            </update>

    <delete id="baseDelete" parameterType="java.util.Map">
        delete from dir_special_apps <include refid="deleteWhereCause"/>
    </delete>

    <sql id="deleteWhereCause">
        <where>
                                <if test="id != null">
                id = #{id}
            </if>
                                                                                                                                                                                                                                                        </where>
    </sql>



</mapper>
