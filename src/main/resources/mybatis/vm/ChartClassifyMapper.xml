<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinawiserv.dsp.vm.mapper.ChartClassifyMapper">

	<!-- 开启二级缓存 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.chinawiserv.dsp.vm.entity.po.ChartClassify">
                    <id column="id" property="id" />
                                                                                            <result column="chart_id" property="chartId" />
                            <result column="classify_name" property="classifyName" />
                            <result column="classify_level" property="classifyLevel" />
                            <result column="chart_type" property="chartType" />
            	</resultMap>

	<resultMap id="BaseResultVoMap" extends="BaseResultMap" type="com.chinawiserv.dsp.vm.entity.vo.ChartClassifyVo">

    </resultMap>

    <!-- 通用查询过滤条件 -->
    <sql id="queryConditions">
        <where>
                                <if test="id != null">
                t.id = #{id,jdbcType=VARCHAR}
            </if>
                                                                                                            </where>
    </sql>

    <select id="selectVoPage" parameterType="java.util.Map" resultMap="BaseResultVoMap">
    		SELECT t.* FROM vm_chart_classify t <include refid="queryConditions"></include>
    </select>

    <select id="selectVoById" parameterType="java.lang.String" resultMap="BaseResultVoMap">
    	SELECT t.* FROM vm_chart_classify t WHERE t.id = #{id}
    </select>

    <select id="selectVoCount"  parameterType="java.util.Map" resultType="java.lang.Integer">
    	SELECT count(1) FROM vm_chart_classify t <include refid="queryConditions"></include>
    </select>

    <insert id="baseInsert" parameterType="com.chinawiserv.dsp.vm.entity.po.ChartClassify">
        insert into vm_chart_classify(id,chart_id,classify_name,classify_level,chart_type,) values(
            #{id},#{chartId},#{classifyName},#{classifyLevel},#{chartType},        )
    </insert>

    <update id="baseUpdate" parameterType="com.chinawiserv.dsp.vm.entity.po.ChartClassify">
        update vm_chart_classify
        <set>
                    <if test="id != null">
                id = #{id},
            </if>
                    <if test="chartId != null">
                chart_id = #{chartId},
            </if>
                    <if test="classifyName != null">
                classify_name = #{classifyName},
            </if>
                    <if test="classifyLevel != null">
                classify_level = #{classifyLevel},
            </if>
                    <if test="chartType != null">
                chart_type = #{chartType},
            </if>
                </set>
        where  id = #{id}              </update>

    <delete id="baseDelete" parameterType="java.util.Map">
        delete from vm_chart_classify <include refid="deleteWhereCause"/>
    </delete>

    <sql id="deleteWhereCause">
        <where>
                                <if test="id != null">
                id = #{id}
            </if>
                                                                                                            </where>
    </sql>



</mapper>
