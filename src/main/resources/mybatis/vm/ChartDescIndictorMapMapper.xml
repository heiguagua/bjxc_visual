<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinawiserv.dsp.vm.mapper.ChartDescIndictorMapMapper">

	<!-- 开启二级缓存 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.chinawiserv.dsp.vm.entity.po.ChartDescIndictorMap">
                    <id column="id" property="id" />
                                                                                <result column="chart_id" property="chartId" />
                            <result column="indictor_code" property="indictorCode" />
                            <result column="indictor_show_name" property="indictorShowName" />
            	</resultMap>

	<resultMap id="BaseResultVoMap" extends="BaseResultMap" type="com.chinawiserv.dsp.vm.entity.vo.ChartDescIndictorMapVo">

    </resultMap>

    <!-- 通用查询过滤条件 -->
    <sql id="queryConditions">
        <where>
                                <if test="id != null">
                t.id = #{id,jdbcType=VARCHAR}
            </if>
                                                                                        </where>
    </sql>

    <select id="selectVoPage" parameterType="java.util.Map" resultMap="BaseResultVoMap">
    		SELECT t.* FROM vm_chart_desc_indictor_map t <include refid="queryConditions"></include>
    </select>

    <select id="selectVoById" parameterType="java.lang.String" resultMap="BaseResultVoMap">
    	SELECT t.* FROM vm_chart_desc_indictor_map t WHERE t.id = #{id}
    </select>

    <select id="selectVoCount"  parameterType="java.util.Map" resultType="java.lang.Integer">
    	SELECT count(1) FROM vm_chart_desc_indictor_map t <include refid="queryConditions"></include>
    </select>

    <insert id="baseInsert" parameterType="com.chinawiserv.dsp.vm.entity.po.ChartDescIndictorMap">
        insert into vm_chart_desc_indictor_map(id,chart_id,indictor_code,indictor_show_name,) values(
            #{id},#{chartId},#{indictorCode},#{indictorShowName},        )
    </insert>

    <update id="baseUpdate" parameterType="com.chinawiserv.dsp.vm.entity.po.ChartDescIndictorMap">
        update vm_chart_desc_indictor_map
        <set>
                    <if test="id != null">
                id = #{id},
            </if>
                    <if test="chartId != null">
                chart_id = #{chartId},
            </if>
                    <if test="indictorCode != null">
                indictor_code = #{indictorCode},
            </if>
                    <if test="indictorShowName != null">
                indictor_show_name = #{indictorShowName},
            </if>
                </set>
        where  id = #{id}            </update>

    <delete id="baseDelete" parameterType="java.util.Map">
        delete from vm_chart_desc_indictor_map <include refid="deleteWhereCause"/>
    </delete>

    <sql id="deleteWhereCause">
        <where>
                                <if test="id != null">
                id = #{id}
            </if>
                                                                                        </where>
    </sql>



</mapper>
