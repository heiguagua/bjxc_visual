<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinawiserv.dsp.vm.mapper.ChartConfMapper">

	<!-- 开启二级缓存 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.chinawiserv.dsp.vm.entity.po.ChartConf">
                    <id column="id" property="id" />
                                                                                                                                                                                                        <result column="chart_code" property="chartCode" />
                            <result column="chart_name" property="chartName" />
                            <result column="is_name_show" property="isNameShow" />
                            <result column="chart_desc" property="chartDesc" />
                            <result column="chart_type" property="chartType" />
                            <result column="chart_url" property="chartUrl" />
                            <result column="chart_time_type" property="chartTimeType" />
                            <result column="chart_time_scope" property="chartTimeScope" />
                            <result column="status" property="status" />
                            <result column="create_user_id" property="createUserId" />
                            <result column="create_time" property="createTime" />
                            <result column="update_user_id" property="updateUserId" />
                            <result column="update_time" property="updateTime" />
            	</resultMap>

	<resultMap id="BaseResultVoMap" extends="BaseResultMap" type="com.chinawiserv.dsp.vm.entity.vo.ChartConfVo">

    </resultMap>

    <!-- 通用查询过滤条件 -->
    <sql id="queryConditions">
        <where>
                                <if test="id != null">
                t.id = #{id,jdbcType=VARCHAR}
            </if>
                                                                                                                                                                                                                                                                                                </where>
    </sql>

    <select id="selectVoPage" parameterType="java.util.Map" resultMap="BaseResultVoMap">
    		SELECT t.* FROM vm_chart_conf t <include refid="queryConditions"></include>
    </select>

    <select id="selectVoById" parameterType="java.lang.String" resultMap="BaseResultVoMap">
    	SELECT t.* FROM vm_chart_conf t WHERE t.id = #{id}
    </select>

    <select id="selectVoCount"  parameterType="java.util.Map" resultType="java.lang.Integer">
    	SELECT count(1) FROM vm_chart_conf t <include refid="queryConditions"></include>
    </select>

    <insert id="baseInsert" parameterType="com.chinawiserv.dsp.vm.entity.po.ChartConf">
        insert into vm_chart_conf(id,chart_code,chart_name,is_name_show,chart_desc,chart_type,chart_url,chart_time_type,chart_time_scope,status,create_user_id,create_time,update_user_id,update_time) values(
            #{id},#{chartCode},#{chartName},#{isNameShow},#{chartDesc},#{chartType},#{chartUrl},#{chartTimeType},#{chartTimeScope},#{status},#{createUserId},#{createTime},#{updateUserId},#{updateTime}        )
    </insert>

    <update id="baseUpdate" parameterType="com.chinawiserv.dsp.vm.entity.po.ChartConf">
        update vm_chart_conf
        <set>
                    <if test="id != null">
                id = #{id},
            </if>
                    <if test="chartCode != null">
                chart_code = #{chartCode},
            </if>
                    <if test="chartName != null">
                chart_name = #{chartName},
            </if>
                    <if test="isNameShow != null">
                is_name_show = #{isNameShow},
            </if>
                    <if test="chartDesc != null">
                chart_desc = #{chartDesc},
            </if>
                    <if test="chartType != null">
                chart_type = #{chartType},
            </if>
                    <if test="chartUrl != null">
                chart_url = #{chartUrl},
            </if>
                    <if test="chartTimeType != null">
                chart_time_type = #{chartTimeType},
            </if>
                    <if test="chartTimeScope != null">
                chart_time_scope = #{chartTimeScope},
            </if>
                    <if test="status != null">
                status = #{status},
            </if>
                    <if test="createUserId != null">
                create_user_id = #{createUserId},
            </if>
                    <if test="createTime != null">
                create_time = #{createTime},
            </if>
                    <if test="updateUserId != null">
                update_user_id = #{updateUserId},
            </if>
                    <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
                </set>
        where  id = #{id}                                </update>

    <delete id="baseDelete" parameterType="java.util.Map">
        delete from vm_chart_conf <include refid="deleteWhereCause"/>
    </delete>

    <sql id="deleteWhereCause">
        <where>
                                <if test="id != null">
                id = #{id}
            </if>
                                                                                                                                                                                                                                                                                                </where>
    </sql>



</mapper>
