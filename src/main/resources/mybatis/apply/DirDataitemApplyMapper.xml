<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinawiserv.dsp.dir.mapper.apply.DirDataitemApplyMapper">

    <!-- 开启二级缓存 -->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.chinawiserv.dsp.dir.entity.po.apply.DirDataitemApply">
        <id column="id" property="id"/>
        <result column="dcm_id" property="dcmId"/>
        <result column="item_id" property="itemId"/>
        <result column="applicant_id" property="applicantId"/>
        <result column="apply_info" property="applyInfo"/>
        <result column="apply_date" property="applyDate"/>
        <result column="auditor_id" property="auditorId"/>
        <result column="status" property="status"/>
        <result column="audit_opinion" property="auditOpinion"/>
        <result column="audit_date" property="auditDate"/>
    </resultMap>

    <resultMap id="BaseResultVoMap" extends="BaseResultMap"
               type="com.chinawiserv.dsp.dir.entity.vo.apply.DirDataitemApplyVo">

    </resultMap>

    <!-- 通用查询过滤条件 -->
    <sql id="queryConditions">
        <where>
            <if test="id != null">
              t.id = #{id,jdbcType=VARCHAR}
            </if>

        </where>
    </sql>
    <!-- 查询共享审核数据条件 -->
    <sql id="queryApplyConditions">
        <where>
            t1.applicant_id = t2.id and
            t2.dept_id = t6.id and
            t1.dcm_id=t3.id AND
            t3.dataset_id = t4.id AND
            t3.classify_id = t5.id
        </where>
    </sql>


    <select id="selectVoPage" parameterType="java.util.Map" resultMap="BaseResultVoMap">
        SELECT t1.id,t1.apply_date,
        t2.real_name,
        t6.dept_name,
        t4.id as datasetId,t4.dataset_name,
        t5.classify_name,t5.classify_structure_name
        FROM dir_dataitem_apply t1,
        sys_user t2,
        dir_dataset_classify_map t3,
        dir_dataset t4,
        dir_classify t5,
        sys_dept t6
        <include refid="queryApplyConditions"></include>

        <!--<if test="search != null">
            AND t5.classify_name LIKE CONCAT('%',#{search,jdbcType=VARCHAR},'%')
        </if>
        <if test="searchKey != null">
            AND t4.dataset_name LIKE CONCAT('%',#{searchKey,jdbcType=VARCHAR},'%')
        </if>-->
        <!--<if test="real_name != null">
            AND t2.real_name LIKE CONCAT('%',#{real_name,jdbcType=VARCHAR},'%')
        </if>-->
        GROUP BY t2.real_name,datasetId
    </select>

<!--查询共享审核详情页-即具体的数据项 -->
    <select id="selectVoPageDetails" parameterType="java.util.Map" resultMap="BaseResultVoMap">
        SELECT t1.id, t1.apply_info, t1.`status`, t1.audit_opinion, t1.audit_date,t1.auditor_id,
        t2.real_name,t4.source_type

        FROM dir_dataitem_apply t1,
        sys_user t2,
        dir_dataset_classify_map t3,
        dir_dataset t4,
        dir_classify t5,
        sys_dept t6
        <include refid="queryApplyConditions"></include>
        AND t4.id = #{id,jdbcType=VARCHAR}
        AND t2.real_name =  #{realName,jdbcType=VARCHAR}
        <if test="status != null">
            AND t1.status = #{status,jdbcType=VARCHAR}
        </if>
        <if test="source_type != null">
            AND t4.source_type = #{source_type,jdbcType=VARCHAR}
        </if>
        <if test="real_name != null">
            AND t2.real_name LIKE CONCAT('%',#{real_name,jdbcType=VARCHAR},'%')
        </if>
    </select>

<!--计算未审核数据项个数 -->
    <select id="selectDataItemStatusCount" parameterType="java.util.Map" resultType="java.lang.Integer">
        SELECT  COUNT(t1.`status`)
        FROM dir_dataitem_apply t1,
        sys_user t2,
        dir_dataset_classify_map t3,
        dir_dataset t4,
        dir_classify t5,
        sys_dept t6
        <include refid="queryApplyConditions"></include>
        AND t4.id = #{id,jdbcType=VARCHAR}
        AND t2.real_name = #{realName,jdbcType=VARCHAR}
        AND t1.`status`='0'
    </select>


    <select id="selectVoById" parameterType="java.lang.String" resultMap="BaseResultVoMap">
    	SELECT  t1.id,t2.real_name,t3.dept_name FROM dir_dataitem_apply t1,sys_user t2,sys_dept t3
        WHERE  t1.applicant_id = t2.id and t2.dept_id = t3.id and t1.id = #{id}
    </select>

    <select id="selectVoCount" parameterType="java.util.Map" resultType="java.lang.Integer">
        SELECT count(1) FROM dir_dataitem_apply t
        <include refid="queryConditions"></include>
    </select>

    <insert id="baseInsert" parameterType="com.chinawiserv.dsp.dir.entity.po.apply.DirDataitemApply">
        insert into dir_dataitem_apply(id,dcm_id,item_id,applicant_id,apply_info,apply_date,auditor_id,status,audit_opinion,audit_date,) values(
            #{id},#{dcmId},#{itemId},#{applicantId},#{applyInfo},#{applyDate},#{auditorId},#{status},#{auditOpinion},#{auditDate},        )
    </insert>

    <update id="baseUpdate" parameterType="com.chinawiserv.dsp.dir.entity.po.apply.DirDataitemApply">
        update dir_dataitem_apply
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="dcmId != null">
                dcm_id = #{dcmId},
            </if>
            <if test="itemId != null">
                item_id = #{itemId},
            </if>
            <if test="applicantId != null">
                applicant_id = #{applicantId},
            </if>
            <if test="applyInfo != null">
                apply_info = #{applyInfo},
            </if>
            <if test="applyDate != null">
                apply_date = #{applyDate},
            </if>
            <if test="auditorId != null">
                auditor_id = #{auditorId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="auditOpinion != null">
                audit_opinion = #{auditOpinion},
            </if>
            <if test="auditDate != null">
                audit_date = #{auditDate},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="baseDelete" parameterType="java.util.Map">
        delete from dir_dataitem_apply
        <include refid="deleteWhereCause"/>
    </delete>

    <sql id="deleteWhereCause">
        <where>
            <if test="id != null">
                id = #{id}
            </if>
        </where>
    </sql>


</mapper>
