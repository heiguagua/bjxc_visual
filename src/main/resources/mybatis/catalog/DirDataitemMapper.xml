        (
        #{item.id},#{item.datasetId},#{item.itemCode},#{item.itemName},#{item.itemDesc},#{item.itemType},#{item.itemLength},
        #{item.belongDeptId},#{item.shareType},#{item.shareCondition},#{item.noShareReason},#{item.shareMethodCategory},
