            #{id},#{datasetId},#{itemCode},#{itemName},#{itemDesc},#{itemType},#{itemLength},#{belongDeptId},#{shareType},#{shareCondition},#{noShareReason},#{shareMethodCategory},#{shareMethod},#{isOpen},#{openCondition},#{updateFrequency},#{formatCategory},#{formatType},#{formatInfo},#{storageMedium},#{storageLocation},#{belongSystemId},#{secretFlag},#{status},#{createUserId},#{createTime},#{updateUserId},#{updateTime})
    </insert>

