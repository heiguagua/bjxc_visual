<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinawiserv.dsp.dir.mapper.catalog.DirDatasetSourceInfoMapper">

	<!-- 开启二级缓存 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.chinawiserv.dsp.dir.entity.po.catalog.DirDatasetSourceInfo">
                    <id column="id" property="id" />
                                                                                            <result column="dataset_id" property="datasetId" />
                            <result column="source_mode" property="sourceMode" />
                            <result column="source_obj_type" property="sourceObjType" />
                            <result column="source_obj_id" property="sourceObjId" />
            	</resultMap>

	<resultMap id="BaseResultVoMap" extends="BaseResultMap" type="com.chinawiserv.dsp.dir.entity.vo.catalog.DirDatasetSourceInfo">

    </resultMap>

    <!-- 通用查询过滤条件 -->
    <sql id="queryConditions">
        <where>
                                <if test="id != null">
                t.id = #{id,jdbcType=VARCHAR}
            </if>
                                                                                                            </where>
    </sql>

    <select id="selectVoPage" parameterType="java.util.Map" resultMap="BaseResultVoMap">
    		SELECT t.* FROM dir_dataset_source_info t <include refid="queryConditions"></include>
    </select>

    <select id="selectVoById" parameterType="java.lang.String" resultMap="BaseResultVoMap">
    	SELECT t.* FROM dir_dataset_source_info t WHERE t.id = #{id}
    </select>

    <select id="selectVoCount"  parameterType="java.util.Map" resultType="java.lang.Integer">
    	SELECT count(1) FROM dir_dataset_source_info t <include refid="queryConditions"></include>
    </select>

    <insert id="baseInsert" parameterType="com.chinawiserv.dsp.dir.entity.po.catalog.DirDatasetSourceInfo">
        insert into dir_dataset_source_info(id,dataset_id,source_mode,source_obj_type,source_obj_id,) values(
            #{id},#{datasetId},#{sourceMode},#{sourceObjType},#{sourceObjId},        )
    </insert>

    <update id="baseUpdate" parameterType="com.chinawiserv.dsp.dir.entity.po.catalog.DirDatasetSourceInfo">
        update dir_dataset_source_info
        <set>
                    <if test="id != null">
                id = #{id},
            </if>
                    <if test="datasetId != null">
                dataset_id = #{datasetId},
            </if>
                    <if test="sourceMode != null">
                source_mode = #{sourceMode},
            </if>
                    <if test="sourceObjType != null">
                source_obj_type = #{sourceObjType},
            </if>
                    <if test="sourceObjId != null">
                source_obj_id = #{sourceObjId},
            </if>
                </set>
        where  id = #{id}              </update>

    <delete id="baseDelete" parameterType="java.util.Map">
        delete from dir_dataset_source_info <include refid="deleteWhereCause"/>
    </delete>

    <sql id="deleteWhereCause">
        <where>
                                <if test="id != null">
                id = #{id}
            </if>
                                                                                                            </where>
    </sql>



</mapper>
