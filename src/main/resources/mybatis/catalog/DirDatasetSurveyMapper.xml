<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinawiserv.dsp.dir.mapper.catalog.DirDatasetSurveyMapper">
    <resultMap id="BaseResultMap" type="com.chinawiserv.dsp.dir.entity.po.catalog.DirDatasetSurvey">
        <id column="id" property="id" />
        <result column="dataset_id" property="datasetId" />
        <result column="total_storage" property="totalStorage" />
        <result column="structure_count" property="structureCount" />
        <result column="shared_storage" property="sharedStorage" />
        <result column="shared_structure_count" property="sharedStructureCount" />
        <result column="opened_storage" property="openedStorage" />
        <result column="opened_structure_count" property="openedStructureCount" />
    </resultMap>

    <resultMap id="BaseResultVoMap" extends="BaseResultMap"
               type="com.chinawiserv.dsp.dir.entity.vo.catalog.DirDatasetSurveyVo">
    </resultMap>

    <!-- 通用查询过滤条件 -->
    <sql id="queryConditions">
        <where>
            <if test="datasetId != null">
                and t.dataset_id = #{datasetId,jdbcType=VARCHAR}
            </if>
        </where>
    </sql>

    <select id="baseSelect" parameterType="java.util.Map" resultMap="BaseResultVoMap">
        SELECT t.* FROM dir_dataset_survey t
        <include refid="queryConditions"></include>
    </select>


    <insert id="baseInsert" parameterType="com.chinawiserv.dsp.dir.entity.po.catalog.DirDatasetSurvey">
        insert into dir_dataset_survey(id,dataset_id,total_storage,structure_count,shared_storage,shared_structure_count,opened_storage,opened_structure_count)
        values(#{id},#{datasetId},#{totalStorage},#{structureCount},#{sharedStorage},#{sharedStructureCount},#{openedStorage},#{openedStructureCount})
    </insert>

    <update id="baseUpdate" parameterType="com.chinawiserv.dsp.dir.entity.po.catalog.DirDatasetSurvey">
        update dir_dataset_survey
        <set>
            <if test="totalStorage != null">
                total_storage = #{totalStorage},
            </if>
            <if test="structureCount != null">
                structure_count = #{structureCount},
            </if>
            <if test="sharedStorage != null">
                shared_storage = #{sharedStorage},
            </if>
            <if test="sharedStructureCount != null">
                shared_structure_count = #{sharedStructureCount},
            </if>
            <if test="openedStorage != null">
                opened_storage = #{openedStorage},
            </if>
            <if test="openedStructureCount != null">
                opened_structure_count = #{openedStructureCount},
            </if>
        </set>
        where  id = #{id}
    </update>

    <!--梳理-->
    <select id="selectDrapSurveyByDatasetId" resultMap="BaseResultMap">
        SELECT * FROM drap_dataset_survey WHERE dataset_id=#{dataset_id} LIMIT 1
    </select>
</mapper>