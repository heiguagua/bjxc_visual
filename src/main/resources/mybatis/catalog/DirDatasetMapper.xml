            #{id},#{regionCode},#{datasetCode},#{datasetName},#{alias},#{belongDeptId},#{datasetDesc},#{shareType},#{shareCondition},#{shareMethod},#{shareMethodDesc},#{isOpen},#{openCondition},#{updateFrequency},#{relDatasetCode},#{storageMedium},#{storageLocation},#{dataLevel},#{dataIndexSystem},#{isSecret},#{sourceType},#{status},#{createUserId},#{createTime},#{updateUserId},#{updateTime},#{deleteFlag},        )
    </insert>

