    <delete id="baseDelete" parameterType="java.util.Map">
        delete from dir_dataset <include refid="deleteWhereCause"/>
    </delete>

    <sql id="deleteWhereCause">
        <where>
                                <if test="id != null">
                id = #{id}
            </if>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    </where>
    </sql>

    <select id="selectActivityByDeptId" resultType="map">
        SELECT
            dba.id,
            dba.activity_name
        FROM
            drap_business_activity dba
        LEFT JOIN sys_dept sd ON dba.belong_dept = sd.id
        WHERE TRUE AND sd.id=#{dept_id}
    </select>

    <select id="selectDatasetByActivityId" resultType="map">
        SELECT
            dd.id,dd.dataset_name
        FROM
            drap_dataset dd
        LEFT JOIN drap_business_activity dba ON dd.belong_activity_id = dba.id
        WHERE TRUE AND dba.id=#{activity_id}
    </select>

