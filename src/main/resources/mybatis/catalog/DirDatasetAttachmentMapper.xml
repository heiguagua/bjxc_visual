<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinawiserv.dsp.dir.mapper.catalog.DirDatasetAttachmentMapper">

    <!-- 开启二级缓存 -->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.chinawiserv.dsp.dir.entity.po.catalog.DirDatasetAttachment">
        <id column="id" property="id"/>
        <result column="dataset_id" property="datasetId"/>
        <result column="dataset_file_path" property="datasetFilePath"/>
        <result column="format" property="format"/>
        <result column="file_size" property="fileSize"/>
        <result column="file_name" property="fileName"/>
        <result column="uploader" property="uploader"/>
        <result column="upload_time" property="uploadTime"/>
    </resultMap>

    <resultMap id="BaseResultVoMap" extends="BaseResultMap"
               type="com.chinawiserv.dsp.dir.entity.vo.catalog.DirDatasetAttachmentVo">

    </resultMap>

    <!-- 通用查询过滤条件 -->
    <sql id="queryConditions">
        <where>
            <if test="id != null">
                t.id = #{id,jdbcType=VARCHAR}
            </if>
            <if test="datasetId != null">
                t.dataset_id = #{datasetId,jdbcType=VARCHAR}
            </if>
        </where>
    </sql>

    <select id="selectVoPage" parameterType="java.util.Map" resultMap="BaseResultVoMap">
        SELECT t.* FROM dir_dataset_attachment t
        <include refid="queryConditions"></include>
    </select>

    <select id="selectVoById" parameterType="java.lang.String" resultMap="BaseResultVoMap">
        SELECT t.* FROM dir_dataset_attachment t WHERE t.id = #{id}
    </select>

    <select id="selectVoCount" parameterType="java.util.Map" resultType="java.lang.Integer">
        SELECT count(1) FROM dir_dataset_attachment t
        <include refid="queryConditions"></include>
    </select>

    <insert id="baseInsert" parameterType="com.chinawiserv.dsp.dir.entity.po.catalog.DirDatasetAttachment">
        insert into dir_dataset_attachment(id,dataset_id,dataset_file_path,format,file_size,file_name,uploader,upload_time)
            values(#{id},#{datasetId},#{datasetFilePath},#{format},#{fileSize},#{fileName},#{uploader},#{uploadTime})
    </insert>

    <insert id="insertListItem">
        insert into dir_dataset_attachment(id,dataset_id,dataset_file_path,format,file_size,file_name,uploader,upload_time)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.id},#{item.datasetId},#{item.datasetFilePath},#{item.format},#{item.fileSize},#{item.fileName},#{item.uploader},#{item.uploadTime})
        </foreach>
    </insert>

    <update id="baseUpdate" parameterType="com.chinawiserv.dsp.dir.entity.po.catalog.DirDatasetAttachment">
        update dir_dataset_attachment
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="datasetId != null">
                dataset_id = #{datasetId},
            </if>
            <if test="datasetFilePath != null">
                dataset_file_path = #{datasetFilePath},
            </if>
            <if test="format != null">
                format = #{format},
            </if>
            <if test="fileSize != null">
                file_size = #{fileSize},
            </if>
            <if test="fileName != null">
                file_name = #{fileName},
            </if>
            <if test="uploader != null">
                uploader = #{uploader},
            </if>
            <if test="uploadTime != null">
                upload_time = #{uploadTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="baseDelete" parameterType="java.util.Map">
        delete from dir_dataset_attachment
        <include refid="deleteWhereCause"/>
    </delete>

    <sql id="deleteWhereCause">
        <where>
            <if test="id != null">
                id = #{id}
            </if>
        </where>
    </sql>


</mapper>
