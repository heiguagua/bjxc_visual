<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinawiserv.dsp.dir.mapper.feedback.DirDataCollectionMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.chinawiserv.dsp.dir.entity.po.feedback.DirDataCollection">
        <id column="id" property="id"/>
        <result column="dcm_id" property="dcmId"/>
        <result column="collector_id" property="collectorId"/>
        <result column="collect_date" property="collectDate"/>
    </resultMap>

    <resultMap id="BaseResultVoMap" extends="BaseResultMap"
               type="com.chinawiserv.dsp.dir.entity.vo.feedback.DirDataCollectionVo">

    </resultMap>

    <!-- 通用查询过滤条件 -->
    <sql id="queryConditions">
        <where>
            <if test="id != null">
                t.id = #{id,jdbcType=VARCHAR}
            </if>
        </where>
    </sql>
    <!-- 查询收藏列表: -->
    <select id="selectVoPage" parameterType="java.util.Map" resultType="com.chinawiserv.dsp.dir.entity.vo.feedback.DirDataCollectionVo">
        SELECT
        ddc.`id`,
        ddc.`dcm_id`,
        ddc.`collect_date`,
        dc.`classify_structure_name` AS classify_name,
        dt.`dataset_name`,
        COUNT(DISTINCT ddc.`collector_id`) AS collector_count
        FROM
        (SELECT
        *
        FROM
        dir_data_collection
        ORDER BY collect_date DESC) ddc
        LEFT JOIN dir_dataset_classify_map dcm
        ON dcm.`id` = ddc.`dcm_id`
        LEFT JOIN dir_classify dc
        ON dc.`id` = dcm.`classify_id`
        LEFT JOIN dir_dataset dt
        ON dt.`id` = dcm.`dataset_id`
        LEFT JOIN sys_user su
        ON su.`id` = ddc.`collector_id`
        LEFT JOIN sys_dept sd
        ON sd.`id` = su.`dept_id`
        WHERE TRUE
        <!-- 搜索关键字 -->
        <if test="null != searchKey and '' != searchKey">
            AND dt.`dataset_name` LIKE CONCAT('%',#{searchKey},'%')
        </if>
        <if test="null != classifyId and '' != classifyId">
            AND dc.`id` = #{classifyId}
        </if>
        <choose>
            <when test="'admin' == userName">
                AND 1=1
            </when>
            <otherwise>
                <if test="null != regionCode and '' != regionCode">
                    AND su.`region_code` = #{regionCode}
                </if>
                <if test="null != deptId and '' != deptId">
                    AND sd.`dept_code` LIKE CONCAT(
                    (SELECT
                    dept_code
                    FROM
                    sys_dept
                    WHERE id = #{deptId}),
                    '%'
                    )
                </if>
            </otherwise>
        </choose>
        <include refid="queryConditions"></include>
        GROUP BY ddc.`dcm_id`
        ORDER BY ddc.`collect_date` DESC
    </select>
    <!-- 根据dcmId查询收藏详情,多个用户可以收藏同个数据集 -->
    <select id="selectDetailByDcmId" parameterType="java.util.Map" resultType="com.chinawiserv.dsp.dir.entity.vo.feedback.DirDataCollectionVo">
        SELECT
        ddc.*,
        dc.`classify_structure_name` AS classify_name,
        dt.`dataset_name`,
        su.`real_name` AS collector_name
        FROM
        dir_data_collection ddc
        LEFT JOIN dir_dataset_classify_map dcm
        ON dcm.`id` = ddc.`dcm_id`
        LEFT JOIN dir_classify dc
        ON dc.`id` = dcm.`classify_id`
        LEFT JOIN dir_dataset dt
        ON dt.`id` = dcm.`dataset_id`
        LEFT JOIN sys_user su
        ON su.`id` = ddc.`collector_id`
        WHERE ddc.`dcm_id` = #{dcmId}
        <!-- 搜索关键字 -->
        <if test="null != searchKey and '' != searchKey">
            AND su.`real_name` LIKE CONCAT('%',#{searchKey},'%')
        </if>
        ORDER BY ddc.`collect_date` DESC
    </select>

    <select id="selectVoById" parameterType="java.lang.String" resultMap="BaseResultVoMap">
        SELECT * FROM dir_data_collection t WHERE t.id = #{id}
    </select>

    <select id="selectVoCount" parameterType="java.util.Map" resultType="java.lang.Integer">
        SELECT count(1) FROM dir_data_collection t
        <include refid="queryConditions"></include>
    </select>

    <insert id="baseInsert" parameterType="com.chinawiserv.dsp.dir.entity.po.feedback.DirDataCollection">
        insert into dir_data_collection(id,dcm_id,collector_id,collect_date,) values(
        #{id},#{dcmId},#{collectorId},#{collectDate}, )
    </insert>

    <update id="baseUpdate" parameterType="com.chinawiserv.dsp.dir.entity.po.feedback.DirDataCollection">
        update dir_data_collection
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="dcmId != null">
                dcm_id = #{dcmId},
            </if>
            <if test="collectorId != null">
                collector_id = #{collectorId},
            </if>
            <if test="collectDate != null">
                collect_date = #{collectDate},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="baseDelete" parameterType="java.util.Map">
        delete from dir_data_collection
        <include refid="deleteWhereCause"/>
    </delete>

    <sql id="deleteWhereCause">
        <where>
            <if test="id != null">
                id = #{id}
            </if>
        </where>
    </sql>


</mapper>
