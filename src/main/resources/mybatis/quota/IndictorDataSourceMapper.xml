<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinawiserv.dsp.quota.mapper.IndictorDataSourceMapper">

	<!-- 开启二级缓存 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.chinawiserv.dsp.quota.entity.po.IndictorDataSource">
                    <id column="id" property="id" />
                                                                    <result column="indictor_data_id" property="indictorDataId" />
                            <result column="import_history_id" property="importHistoryId" />
            	</resultMap>

	<resultMap id="BaseResultVoMap" extends="BaseResultMap" type="com.chinawiserv.dsp.quota.entity.vo.IndictorDataSourceVo">

    </resultMap>

    <!-- 通用查询过滤条件 -->
    <sql id="queryConditions">
        <where>
                                <if test="id != null">
                t.id = #{id,jdbcType=VARCHAR}
            </if>
                                                                    </where>
    </sql>

    <select id="selectVoPage" parameterType="java.util.Map" resultMap="BaseResultVoMap">
    		SELECT t.* FROM im_indictor_data_source t <include refid="queryConditions"></include>
    </select>

    <select id="selectVoById" parameterType="java.lang.String" resultMap="BaseResultVoMap">
    	SELECT t.* FROM im_indictor_data_source t WHERE t.id = #{id}
    </select>

    <select id="selectVoCount"  parameterType="java.util.Map" resultType="java.lang.Integer">
    	SELECT count(1) FROM im_indictor_data_source t <include refid="queryConditions"></include>
    </select>

    <insert id="baseInsert" parameterType="com.chinawiserv.dsp.quota.entity.po.IndictorDataSource">
        insert into im_indictor_data_source(id,indictor_data_id,import_history_id,) values(
            #{id},#{indictorDataId},#{importHistoryId},        )
    </insert>

    <update id="baseUpdate" parameterType="com.chinawiserv.dsp.quota.entity.po.IndictorDataSource">
        update im_indictor_data_source
        <set>
                    <if test="id != null">
                id = #{id},
            </if>
                    <if test="indictorDataId != null">
                indictor_data_id = #{indictorDataId},
            </if>
                    <if test="importHistoryId != null">
                import_history_id = #{importHistoryId},
            </if>
                </set>
        where  id = #{id}          </update>

    <delete id="baseDelete" parameterType="java.util.Map">
        delete from im_indictor_data_source <include refid="deleteWhereCause"/>
    </delete>

    <sql id="deleteWhereCause">
        <where>
                                <if test="id != null">
                id = #{id}
            </if>
                                                                    </where>
    </sql>



</mapper>
