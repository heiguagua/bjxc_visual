	<bean class="com.alibaba.fastjson.support.spring.FastJsonHttpMessageConverter4">
		<property name="supportedMediaTypes">
			<list>
				<value>application/json</value>
			</list>
		</property>
		<!-- FastJsonConfig -->
		<property name="fastJsonConfig" ref="fastJsonConfig" />
	</bean>

